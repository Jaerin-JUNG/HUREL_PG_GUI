<Window x:Class="HUREL_PG_GUI.Views.Window_PositioningSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:viewmodel="clr-namespace:HUREL_PG_GUI.ViewModels"
        
        xmlns:sf="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
              syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Metro}"
        
        xmlns:local="clr-namespace:HUREL_PG_GUI.Views"
        mc:Ignorable="d"
        Title="Window_PositioningSystem" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodel:VM_PositioningSystem/>
    </Window.DataContext>

    <Grid Background="#FFEAEAEA">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="5" Margin="10, 10, 10, 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource TBlock_Positioning1}" Text="Motor Status" Margin="20, 15, 20, 0"/>

                    <Grid Grid.Row="1" Margin="50, 10, 10, 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="10" Text="Port No." Style="{StaticResource TBlock_Positioning2}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="10" Text="Status" Style="{StaticResource TBlock_Positioning2}"/>

                        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding VMcomboBoxPortNo}" SelectedItem="{Binding SelectedcomboBoxPortNo}" Margin="0, 10, 10, 10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="Motor Connected" Style="{StaticResource TBlock_Positioning2}"/>

                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="10" Command="{Binding Positioning_ConnectCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource Button_PositioningSystem}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMotorConnected}" Value="True">
                                            <Setter Property="Background" Value="Gray"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsMotorConnected}" Value="False">
                                            <Setter Property="Background" Value="#FF00457E"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IsMotorConnected, Converter={StaticResource Conv_BoolToString_MotorConnection}}" FontSize="20"
                                               Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="5" Margin="10, 10, 10, 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource TBlock_Positioning1}" Text="Tracker Status" Margin="20, 15, 20, 0"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="40, 10, 30, 0">
                            <Grid.ColumnDefinitions>
